<html>
<head>
    <title></title>
    <link type="text/css" rel="stylesheet" href="/platform/login/password.css">
    <script type="text/javascript" src="/platform/login/password.js"></script>
    <script type="text/javascript" src="/cyan/client/validate.js"></script>
</head>
<body>

    <div id="mainBody">
        <div id="container">
            <div id="main">
                <form id="form" action="">
                    <div class="components">
                        <div class="component_item">
                            <div class="label">原密码<span class="require">*</span></div>
                            <div class="component">
                                <input name="oldPassword" type="password">
                            </div>
                        </div>
                        <div class="component_item">
                            <div class="label">新密码<span class="require">*</span></div>
                            <div class="component">
                                <input name="password" type="password">
                            </div>
                        </div>
                        <div class="component_item">
                            <div class="label">确认密码<span class="require">*</span></div>
                            <div class="component">
                                <input name="password_confirm" type="password" require equal="password">
                            </div>
                        </div>
                    </div>
                    <div class="buttons">
                        <span class="button">
                            <button type="button" onclick="save();">保存</button>
                        </span>
                        <span class="button">
                            <button type="button" onclick="System.closePage()">关闭</button>
                        </span>
                    </div>
                </form>

                <div id="rule">密码规则</div>
            </div>


        </div>
    </div>
</body>
</html>